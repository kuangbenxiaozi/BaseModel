<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_box_container"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_centerVertical="true"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/search_view_bg_white"
    android:paddingLeft="15dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/home_search_img"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/search_icon"/>

    <TextView
        android:id="@+id/home_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:background="#f0142d"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="搜索"
        android:textColor="#999999"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/home_search_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/home_search_btn"
        android:layout_toRightOf="@id/home_search_img"
        android:ellipsize="end"
        android:hint="请输入商家或商品"
        android:lines="1"
        android:textColor="#999999"
        android:textSize="14sp"/>
</RelativeLayout>
